<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="12"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.derek.pianochordpads.MainActivity"
    android:background="@color/background_material_light">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Chords"
        android:id="@+id/switch1"
        android:checked="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/black" />

    <Button
        android:layout_width="160dp"
        android:layout_height="135dp"
        android:id="@+id/pad3"
        android:soundEffectsEnabled="false"
        android:text="Not Assigned"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="left|center_vertical"
        android:layout_above="@+id/pad5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="160dp"
        android:layout_height="135dp"
        android:soundEffectsEnabled="false"
        android:text="Not Assigned"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/pad4"
        android:layout_below="@+id/pad2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="160dp"
        android:layout_height="135dp"
        android:soundEffectsEnabled="false"
        android:text="Not Assigned"
        android:id="@+id/pad1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="left|top"
        android:layout_alignTop="@+id/pad2"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="160dp"
        android:layout_height="135dp"
        android:soundEffectsEnabled="false"
        android:text="Not Assigned"
        android:id="@+id/pad5"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="left|bottom"
        android:layout_below="@+id/pad4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="160dp"
        android:layout_height="135dp"
        android:layout_weight="12"
        android:id="@+id/pad6"
        android:soundEffectsEnabled="false"
        android:text="Not Assigned"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="right|bottom"
        android:layout_below="@+id/pad4"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="160dp"
        android:layout_height="135dp"
        android:id="@+id/pad2"
        android:soundEffectsEnabled="false"
        android:text="Not Assigned"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/switch1"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
